<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="andrey.yota.MainActivity"
    android:background="@drawable/gradientblue">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">



        <TextView
            android:layout_width="93dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:textSize="54sp"
            android:id="@+id/amount"
            android:textColor="#404040"
            android:text="300" />

        <TextView
            android:text="рублей"
            android:layout_width="102dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:id="@+id/rouble"
            android:textColor="#404040"/>

        <TextView
            android:layout_width="295.5dp"
            android:layout_height="33.6dp"
            android:id="@+id/anothertext"
            android:text="В месяц.\nСледущее списание 20 апреля"
            android:gravity="center"
            android:layout_marginRight="28.5dp"
            android:layout_marginLeft="36dp"
            android:textColor="#404040"
            />

        <TextView
            android:layout_marginTop="26.4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b2c2c8"
            android:id="@+id/line"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"/>

        <TextView
            android:text="600 минут"
            android:layout_width="295dp"
            android:layout_marginTop="44dp"
            android:gravity="center"
            android:layout_height="47dp"
            android:id="@+id/time"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:textColor="#404040"
            android:layout_weight="0.05" />



        <android.support.v7.widget.AppCompatSeekBar
            android:layout_width="match_parent"
            app:tickMark="@drawable/custom_seekbar_tick_mark"
            android:indeterminateDrawable="@drawable/custom_seekbar_interminate_d"
            android:thumb="@drawable/custom_seekbar_thumb"
            android:layout_height="wrap_content"
            android:max="4"
            android:layout_marginTop="12dp"
            android:progress="2"
            android:id="@+id/timeChooser"
            android:textColor="#404040"
            style="@style/Widget.AppCompat.SeekBar.Discrete" />

        <TextView
            android:layout_width="271dp"
            android:layout_height="20dp"
            android:id="@+id/atext2"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#404040"
            android:text="Звонки на других операторов по России"
            />

        <TextView
            android:layout_marginTop="26.4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b2c2c8"
            android:id="@+id/line2"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"/>
        <Switch
            android:text="Безлимитные SMS за 50 рублей"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bezlimitsms"
            android:textColor="#404040"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"/>

    </LinearLayout>

</RelativeLayout>
